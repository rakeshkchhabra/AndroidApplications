<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgUser"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_username"
        android:id="@+id/imgUsername"
        android:layout_alignLeft="@+id/imgUser"
        android:textColor="#80a4113b"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhoto"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgUser"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="75dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPhoto"
        android:layout_marginTop="250dp"
        android:id="@+id/likelinear" >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgLike"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/heart_like"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/countLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_caption"
            android:layout_marginLeft="20dp"
            android:textColor="#801131a4" />

        <TextView
            android:id="@+id/imgCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_caption"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/likelinear"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/commentlinear1" >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgComment1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/commentor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_commentor"
            android:layout_marginLeft="20dp"
            android:textColor="#801131a4" />

        <TextView
            android:id="@+id/comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_comment"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commentlinear1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/commentlinear2" >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgComment2"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/commentor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_commentor"
            android:layout_marginLeft="20dp"
            android:textColor="#801131a4" />

        <TextView
            android:id="@+id/comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_comment"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/commentCount"
        android:layout_below="@+id/commentlinear2"
        android:layout_alignRight="@+id/commentlinear2"
        android:layout_alignEnd="@+id/commentlinear2"
        android:layout_marginRight="100dp"
        android:textColor="#800d29a4" />

</RelativeLayout>
